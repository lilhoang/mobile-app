<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/img"
        android:layout_marginRight="10dp"
        android:src="@drawable/hoang1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        />

    <TextView
        android:id="@+id/tname"
        android:textSize="22dp"
        android:text="Hoang"
        android:textStyle="bold"
        android:layout_toRightOf="@id/img"
        android:layout_alignTop="@id/img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tsub"
        android:textSize="14dp"
        android:text="SubHoang"
        android:layout_below="@+id/tname"
        android:layout_alignLeft="@+id/tname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tdescribe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tsub"
        android:layout_alignLeft="@id/tsub"
        android:text="describeHoang"
        android:textSize="14dp" />

</RelativeLayout>